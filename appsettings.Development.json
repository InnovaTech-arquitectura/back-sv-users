{
  "ConnectionStrings": {
    "DefaultConnection": "Host=${POSTGRES_HOST};Port=5432;Database=${POSTGRES_DB};Username=${POSTGRES_USER};Password=${POSTGRES_PASSWORD};"
  },
  "Jwt": {
    "Key": "${JWT_KEY}",
    "Issuer": "${JWT_ISSUER}",
    "Audience": "${JWT_AUDIENCE}",
    "AccessExpiration": "${JWT_ACCESS_EXPIRATION}",
    "RefreshExpiration": "${JWT_REFRESH_EXPIRATION}"
  },
  "Smtp": {
    "Host": "${SMTP_HOST}",
    "Port": "${SMTP_PORT}",
    "EnableSsl": "${SMTP_ENABLE_SSL}",
    "Username": "${SMTP_USERNAME}",
    "Password": "${SMTP_PASSWORD}"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft": "Information",
      "Microsoft.EntityFrameworkCore.Database.Command": "Debug",
      "Microsoft.EntityFrameworkCore.Infrastructure": "Debug",
      "Microsoft.EntityFrameworkCore.Model.Validation": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Url": "http://0.0.0.0:5293"
      }
    }
  }
}
